<div class="row">
  <div class="col s12">

    <div class="section">
      <%= render 'login_header' %>
    </div>

    <div class="section">
      <div class="card devise-form-auth-register">
        <div class="card-content">

          <div class="row no-bottom-margin">
            <%= render "form" %>
          </div>

          <div class="row">
            <div class="center-align">
              <%= link_to "No account? Sign up.", new_user_registration_path %>
            </div>
          </div>

          <%= render "login_notices" %>

        </div>
      </div>
    </div>

  </div>
</div>
