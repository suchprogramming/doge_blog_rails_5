<div class="row">
  <div class="col s12">

    <div class="section content-top-spacer">
      <h4>Forgot your password?</h4>
    </div>

    <div class="section">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: field_class(resource, :email) %>
            <p class="error-text"><%= show_errors(resource, :email) %></p>
          </div>
        </div>

        <div class="row">
          <div class="col s12">
            <%= render 'shared/submit_button', text: 'E-Mail Password Reset Instructions' %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
