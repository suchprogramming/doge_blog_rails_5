<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col s12" }) do |f| %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, autofocus: true, class: field_class(resource, :email) %>
      <%= f.label :email %><br />
      <p class="error-text"><%= show_errors(resource, :email) %></p>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password, autocomplete: "off", class: field_class(resource, :password) %>
      <%= f.label :password %>
      <p class="error-text"><%= show_errors(resource, :password) %></p>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: field_class(resource, :password_confirmation) %>
      <%= f.label :password_confirmation %><br />
      <p class="error-text"><%= show_errors(resource, :password_confirmation) %></p>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <button class="btn waves-effect waves-light" type="submit" name="action">
        Sign Up
      </button>
    </div>
  </div>
<% end %>
