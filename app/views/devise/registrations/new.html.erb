<div class="row">
  <div class="col s12">

    <div class="section content-top-spacer center">
      <h4>Sign Up</h4>
    </div>

    <div class="section">
      <div class="card devise-form-auth-register">
        <div class="card-content">

          <div class="row">
            <div class="col s12">
              <%= render "new_registration_form" %>
            </div>
          </div>

          <div class="row">
            <div class=" col s12 center-align">
              <%= link_to 'Already registered? Sign in', new_user_session_path, base_flat_button %>

              <div class="divider" style="margin:10px"></div>

              <%= link_to 'Resend confirmation email', new_user_confirmation_path, base_flat_button %>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
