<div class="row">
  <div class="col s12">

    <div class="section">
      <%= render 'register_header' %>
    </div>

    <div class="section">
      <div class="card devise-form-auth-register">
        <div class="card-content">

          <div class="row">
            <div class="col s12">
              <%= render "new_registration_form" %>
            </div>
          </div>

          <div class="row">
            <div class=" col s12 center-align">
              <%= link_to 'Already registered? Sign in',
                          new_user_session_path,
                          class: "waves-effect waves-teal btn-flat" %>

            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
