<% if current_user %>
  <li><%= link_to 'My Account', edit_user_registration_path %></li>
  <li><%= link_to "Sign Out (#{current_user.email})", destroy_user_session_path, method: :delete %></li>
<% elsif current_admin %>
  <li><%= link_to 'Admin Panel', administration_dashboard_path %></li>
  <li><%= link_to "Sign Out (#{current_admin.email})",destroy_admin_session_path, method: :delete %></li>
<% else %>
  <li><%= link_to 'Log In', new_user_session_path %></li>
  <li><%= link_to 'Sign Up', new_user_registration_path %></li>
<% end %>
