<div class="card-panel comment-form" id="comment-form-row">
  <%= form_for([@comment.commentable, @post, @comment], remote: true) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :text %>
        <%= f.text_area :text, class: "materialize-textarea #{field_class(@comment, :text)}", data: { length: 1000 } %>
        <p class="error-text"><%= show_errors(@comment, :text) %></p>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <%= render 'shared/submit_button', f: f %>
        <a class="waves-effect waves-light btn", id="cancel-comment">Cancel</a>
      </div>
    </div>
  <% end %>
</div>
