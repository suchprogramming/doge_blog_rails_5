$('#comment-form-row').remove();
$('.flash-container').remove();

<% if @post.comments.size == 1 %>
  $(".comments-header").after("<%= j render('comments/comment_section') %>")
<% else %>
  $('.comment-section').replaceWith("<%= j render('comments/comment_section') %>")
<% end %>

$('.comments-header h5').html("<%= @post.comments.count %> Comments")

$('body').append("<%= j render('layouts/messages') %>")
$('.flash-container').animate({ bottom: '+=150px' }, 500).delay(2000).fadeOut(500)
