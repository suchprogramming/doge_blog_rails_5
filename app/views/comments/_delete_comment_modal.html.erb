<!-- Modal Structure -->
<div id="show-comment-delete" class="modal">
  <div class="modal-content">
    <h4>Are you sure you want to delete this comment?</h4>
  </div>
  <div class="modal-footer">
    <a
      class='modal-action waves-effect btn-flat red-text'
      data-remote='true'
      data-method='delete'
      id='delete-comment-modal-link'
    >
      Delete
    </a>
    <a class="modal-action modal-close waves-effect btn-flat green-text">Close</a>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(document).ready(function(){
      $('#show-comment-delete').modal();
    });
  </script>
<% end %>
