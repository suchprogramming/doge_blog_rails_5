<div class="section">
  <h2>Conversation with <%= contextual_name(current_any_scope, @conversation) %></h2>
</div>

<div class="divider"></div>

<div class="section">
  <div class="conversations-show-wrapper">
    <% @conversation.messages.each do |msg| %>
      <div class="conversations-message-item">
        <span><%= default_time(msg.created_at) %></span>
        <p><%= msg.text %></p>
      </div>
    <% end %>
  </div>
  <div class="conversations-message-controls">
    <%= link_to 'Reply', new_conversation_message_path(@conversation) %>
  </div>
</div>
