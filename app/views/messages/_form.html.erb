<%= form_for([@conversation, @message], html: { class: "col s12" }) do |f| %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.label :text %>
      <%= f.text_field :text, class: field_class(@message, :text) %>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <%= render 'shared/submit_button', f: f %>
    </div>
  </div>
  <%= user_form_tag(current_any_scope) %>
<% end %>
