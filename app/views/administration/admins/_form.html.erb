<%= form_for @admin, url: administration_admin_path(@admin), html: { class: 'col s12' } do |f| %>

  <h5>Attributes</h5>

  <div class="row no-bottom-margin">
    <div class="input-field col s12">
      <%= f.label :email %>
      <%= f.email_field :email, class: field_class(@admin, :email) %>
      <p class="error-text"><%= show_errors(@admin, :email) %></p>
    </div>
  </div>

  <div class="row no-bottom-margin">
    <div class="input-field col s12">
      <%= f.label :name, 'Username' %>
      <%= f.text_field :name, class: field_class(@admin, :name), data: { length: 12 } %>
      <p class="error-text"><%= show_errors(@admin, :name) %></p>
    </div>
  </div>

  <h5>Administration</h5>

  <div class="row">
    <div class="col s12">
      <%= render '/administration/edit_user_selectors', f: f %>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <%= render 'shared/submit_button', f: f %>
    </div>
  </div>

<% end %>
