<%= form_for @admin, url: administration_admin_path(@admin) do |f| %>

  <h5>Attributes</h5>

  <div class="row no-bottom-margin">
    <div class="input-field col s12">
      <%= f.label :email %>
      <%= f.email_field :email, class: field_class(@admin, :email) %>
      <p class="error-text"><%= show_errors(@admin, :email) %></p>
    </div>
  </div>

  <h5>Administration</h5>

  <div class="row">
    <div class="col s12">

      <ul class="collection">
        <li class="collection-item">
          <div>
            <span>Account Status</span>
            <div class="switch secondary-content">
              <label>
                Inactive
                <%= f.check_box :active %>
                <span class="lever"></span>
                Active
              </label>
            </div>
          </div>
        </li>

        <li class="collection-item">
          <div>
            <span>Avatar Approved</span>
            <div class="switch secondary-content">
              <label>
                No
                <%= f.check_box :avatar_approved %>
                <span class="lever"></span>
                Yes
              </label>
            </div>
          </div>
        </li>
      </ul>

    </div>
  </div>

  <%= render 'shared/submit_button' %>

<% end %>
