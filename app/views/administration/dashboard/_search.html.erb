<div class="admin-search-form">
  <%= form_tag(path, method: "get", id: "#{search_type}-form", class: "flex-valign") do %>
    <span class="search-icon"><i class="material-icons">search</i></span>
    <%= text_field_tag search_type, params[search_type], placeholder: "Search", type: "search" %>
    <%= link_to 'RESET', path, class: "reset-search" %>
  <% end %>
</div>
