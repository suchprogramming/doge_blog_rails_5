<div class="row">
  <div class="col s12">
    <%= form_for([:administration, @post], html: { class: "col s12 right-align administrate-posts" }, remote: true) do |f| %>
      <div class="row">
        <div class="col s12">
          <h5>Admin Controls</h5>
          <div class="switch">
            <label id="flag-post-check-<%= @post.id %>">
              Inactive
              <%= f.check_box :active %>
              <span class="lever"></span>
              Active
            </label>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
